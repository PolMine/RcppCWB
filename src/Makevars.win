PKG_CPPFLAGS = \
    -I../windows/libcl-patch/include \
    -I../windows/libcl-patch/include/cwb/cl \
    -I../windows/libcl-patch/include/cwb/cqp \
    -I../windows/libcl-patch/include/cwb/CQi

PKG_CXXFLAGS=-D_LIB

PKG_LIBS = \
    -L../windows/libcl-patch/lib${R_ARCH} \
    -Wl,--allow-multiple-definition \
    -lcwb -lcqp -lcl -lpcre -lglib-2.0 -lintl -liconv \
    -lws2_32 -lwinmm -lole32

all: clean winlibs

clean:
#	rm -f $(OBJECTS) $(SHLIB)

winlibs:
	"${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe" --vanilla "../tools/winlibs.R"

.PHONY: all winlibs clean
