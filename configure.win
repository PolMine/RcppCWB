#!/bin/sh

R_CMD='registryFile <- file.path(getwd(), "inst", "extdata", "cwb", "registry", "reuters"); registry <- readLines(registryFile); homeDir <- file.path(gsub("^[A-Z]?:?(.*)$", "\\1", "'"$R_PACKAGE_DIR"'"), "extdata", "cwb", "indexed_corpora", "reuters"); registry[10] <- paste("HOME", homeDir, sep = " "); writeLines(text = registry, con = registryFile)'
${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe -e "$R_CMD"
